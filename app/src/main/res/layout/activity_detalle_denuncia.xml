<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalle_denuncia"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_color"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8F000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/map_fechadenuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="fecha de denuncia"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

            tools:ignore="InvalidId" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="titulo de denuncia"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="tipo de denuncia"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Detalle de denuncia"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />

        <Button

            android:id="@+id/ver_denuncias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/btn_redondeado_white"
            android:elevation="5dp"
            android:text="Ver foto"
            android:textColor="@color/black"

            android:textSize="16dp" />

        <Button

            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/btn_redondeado_white"
            android:elevation="5dp"
            android:text="cambiar estado"
            android:textColor="@color/black"

            android:textSize="16dp" />



    </LinearLayout>

</RelativeLayout>