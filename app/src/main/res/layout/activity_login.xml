<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login_Activity"
    android:background="@drawable/bg_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicia Secion"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="28dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/login_email"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingRight="25dp"
            android:ems="10"
            android:hint="Ingresa tu email"
            android:inputType="textEmailAddress"
            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="14sp"
            android:background="@drawable/input"
            android:textAlignment="center"
            android:textColorHint="#fff"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Clave"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/login_clave"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Ingresa tu clave"
            android:inputType="numberPassword"
            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="14sp"
            android:background="@drawable/input"
            android:textAlignment="center"
            android:textColorHint="#fff"
            />

        <CheckBox
            android:id="@+id/opt1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Encargado"
            android:buttonTint="#000000"
            />


        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:background="@drawable/btn_redondeado_white"
            android:onClick="signIn"
            android:text="entrar"
            tools:ignore="DuplicateIds" />



        <Button
            android:id="@+id/login_google"
            android:layout_width="277dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:text="Entrar con Google "
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:background="@drawable/btn_redondeado_white"
            android:onClick="login_google"
            android:textSize="15sp"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Â¿No tienes cuenta? Registrate Aqui"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:onClick="login"
            />

    </LinearLayout>

</LinearLayout>