<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".denuncia_Activity_encargado"
    android:background="@drawable/bg_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar una denuncia"
            android:textSize="30dp"
            android:textColor="#FF5722"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="En este modulo podras añadir tu denuncia al registro de denuncias ciudadanas."
            android:layout_marginLeft="5dp"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Rellena los campos de texto con la Informacion. "
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"

            />

        <EditText
            android:id="@+id/titulo_denuncia"
            android:maxLength="35"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:ems="10"
            android:textColor="@color/white"
            android:hint="Titulo de la denuncia"
            android:inputType="textEmailAddress"
            android:paddingStart="12px"
            android:textColorHint="#fff"
            android:paddingEnd="12px"
            android:paddingRight="25dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textAlignment="center"
            android:textSize="19sp" />

        <EditText
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:paddingRight="25dp"
            android:ems="10"
            android:hint="Direccion de la denuncia"
            android:inputType="textEmailAddress"
            android:id="@+id/direccion"
            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:textColor="@color/white"
            android:textColorHint="#fff"
            android:background="@drawable/input"
            android:textAlignment="center"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="19sp"
            />

        <EditText
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:paddingRight="25dp"
            android:ems="10"
            android:hint="Detalles de la denuncia(opcional)"
            android:inputType="textEmailAddress"
            android:id="@+id/detalles_denuncia"
            android:paddingStart="12px"
            android:textColor="@color/white"
            android:paddingEnd="12px"
            android:textColorHint="#fff"
            android:background="@drawable/input"
            android:textAlignment="center"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="19sp"
            />

        <Spinner
            android:id="@+id/tipo_denuncia"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingRight="25dp"
            android:paddingStart="12px"
            android:textColor="@color/white"
            android:paddingEnd="12px"
            android:textColorHint="#fff"
            android:background="@drawable/input"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="19sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subir foto desde"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button
                android:id="@+id/subir_imagen"
                android:background="@drawable/btn_redondeado_white"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="Galeria" />
            <Button
                android:id="@+id/abrir_camara"
                android:background="@drawable/btn_redondeado_white"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Camara"
                android:textColor="#000000"
                android:textSize="15sp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/denuncia_imagen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button
                android:id="@+id/atras"
                android:onClick="atras"
                android:background="@drawable/btn_redondeado_white"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="Atras" />
            <Button
                android:id="@+id/btn"
                android:onClick="registrar_denuncia"
                android:background="@drawable/btn_redondeado_white"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:text="registrar"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Registraste una denuncia? Revisa el estado Aqui."
            android:gravity="center"
            android:onClick="ver_denuncias"
            android:layout_marginTop="15dp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>