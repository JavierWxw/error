<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_color"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8F000000"
        android:gravity="center"
        android:orientation="vertical">

    <include layout="@layout/icono_aplicacion"
        android:id="@+id/iamgen_perfil"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Juan Perez"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="19.999.999-9"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="juan1930@gmail.com"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />

        <Button

            android:id="@+id/ver_denuncias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/btn_redondeado_white"
            android:elevation="5dp"
            android:text="Ver Denuncias"
            android:textColor="@color/black"

            android:textSize="16dp" />

        <Button
            android:id="@+id/crear_denuncias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/btn_redondeado_white"
            android:elevation="5dp"

            android:text="Crear denuncia"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>